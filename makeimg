import datetime
import shutil

def makeimg(greeting: str):
    shutil.copy(f"./tmpl/{greeting}.svg", "./img/greetings.svg")
    return greeting

def main():
    current = datetime.datetime.now()
    print(current)
    if current.hour < 12:
        # Morning
        makeimg("morning")
    elif 12 <= current.hour < 18:
        # Afternoon
        makeimg("afternoon")
    else:
        # Evening 
        makeimg("evening")

if __name__ == "__main__":
    main()


